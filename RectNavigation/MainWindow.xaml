<UserControl x:Class="Microsoft.Samples.Kinect.SkeletonBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    

    <Grid Name="LayoutGrid" Margin="10 0 10 0">
        <Ellipse Name="Hand" Width="30" Height="30" Fill="Gray"></Ellipse>
        <Rectangle Name="InnerRect" Width="50" Height="50" Stroke="Gray" StrokeThickness="2">
            <Rectangle.RenderTransform>
                <TranslateTransform></TranslateTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Name="OuterRect" Width="100" Height="100" Stroke="Orange" StrokeThickness="2">
            <Rectangle.RenderTransform>
                <TranslateTransform></TranslateTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</UserControl>
