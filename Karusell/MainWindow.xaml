<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="Middle" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Image Name="CenterImage" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="CenterImageTranslateTransform"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Name="LeftImage" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="LeftImageTranslateTransform"/>
                </TransformGroup>
                </Image.RenderTransform>
        </Image>
        <Image Name="RightImage" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="RightImageTranslateTransform"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
