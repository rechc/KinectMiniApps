<UserControl x:Class="HtwKinect.StateViews.WalkAndLookScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:GreenScreenControl="clr-namespace:GreenScreenControl;assembly=GreenScreenControl"
             xmlns:AccessoryLib="clr-namespace:AccessoryLib;assembly=AccessoryLib"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Name="BgImage" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <GreenScreenControl:GreenScreenControl x:Name="GreenScreen" Grid.Column="0" Margin="25" IsHitTestVisible="False"/>
        <AccessoryLib:AccessoryControl x:Name="Accessories" Grid.Column="0" Margin="25" IsHitTestVisible="False"/>
    </Grid>
</UserControl>