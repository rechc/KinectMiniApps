<UserControl x:Class="GenderDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image x:Name="Image" Grid.ColumnSpan="2" Width="640" Height="480"/>
        <TextBlock x:Name="GenderText" FontSize="20" Grid.Column="0" Grid.Row="1"/>
        <Button Content="Check" Grid.Column="1" Grid.Row="1" Click="GenderCheck"/>
    </Grid>
</UserControl>
